<%- include("partials/header") %>

<%- include("partials/navigation") %>


    <div class="container">
        <h2 class="text-center">Update Student</h2>
        <form action="/students/addstudent"  method="post">
            
            <label for="sId">Student ID</label>
            <input type="text" required id="sId" name="sId" class="form-control mb-2" value="<%= student.sId%>" placeholder="Student ID">
            <label for="sName">Student name</label>
            <input type="text" required id="sName" name="sName" class="form-control mb-2" value="<%= student.sName%>" placeholder="Student Name">
            <label for="email">Email Address</label>
            <input type="email" required id="email" name="email" class="form-control mb-3" value="<%= student.email%>" placeholder="Student Email">

            <button class="btn update" type="submit">Update Student</button>

        </form>

    </div>

<%- include("partials/footer") %>